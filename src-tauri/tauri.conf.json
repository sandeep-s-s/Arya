{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "arya",
  "version": "0.1.0",
  "identifier": "com.arya.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "arya",
        "fullscreen": true,
        "height": 600,
        "resizable": true,
        "width": 800,
        "alwaysOnTop": false,
        "maximized": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
