{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "tars",
  "version": "0.1.0",
  "identifier": "com.tars.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Tars",
        "fullscreen": true,
        "height": 600,
        "resizable": true,
        "width": 1000,
        "alwaysOnTop": false,
        "maximized": false,
        "maximizable": true,
        "minimizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}